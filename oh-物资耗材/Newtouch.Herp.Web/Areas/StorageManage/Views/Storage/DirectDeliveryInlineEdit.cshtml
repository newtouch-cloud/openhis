        return {
            productId: rowData.productId,
            lsj: isNaN(lsj) ? 0 : lsj.toFixed(4),
            jj: jj,
            zje: rowData.zje,
            sl: rowData.sl,
            ckbmkc: rowData.kykcsl,
            unitId: $("#sel_dw_" + rowid).val(),
            unitName: $("#sel_dw_" + rowid).find("option:selected").text(),
            zhyz: zhyz ,
            sccj: rowData.sccj,
            yxq: rowData.yxq,
            scrq: rowData.scrq,
            fph: rowData.fph,
            pc: rowData.pc,
            ph: rowData.ph,
            remark: ""
        };
    }
