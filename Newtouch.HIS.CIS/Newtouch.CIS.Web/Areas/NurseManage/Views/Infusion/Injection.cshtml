        //打印
        function newtouch_event_f10() {
            if (currentMzh === "") {
                $.modalMsg("请选择患者", "warning");
                return;
            }
            var selRowIds = jQuery("#gridRpList").jqGrid("getGridParam", "selarrrow");//选中的id
