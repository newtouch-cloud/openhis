				zdrq : $("#txt_zdsj").val(),
				zdlb:2,
				zdlx: i,
				zddm:$("#txt_fzzd"+i+"dm").val(),
				zdmc:$("#txt_fzzd" + i).val(),
				cyqk:$("#txt_cyqk" + i).val()
			}
			PatDxList.push(PatDxObj);
        }
