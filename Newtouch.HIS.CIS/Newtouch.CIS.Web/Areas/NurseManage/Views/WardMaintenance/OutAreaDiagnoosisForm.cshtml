				zdlx:0,
				zddm: $("#txt_cyzddm").val(),
				zdmc: $("#txt_cyzd").val(),
				cyqk: $("#txt_cyqk").val()
		}

		if (PatDxObj.zddm == "" || PatDxObj.zdmc == "") {
			$.modalAlert('该患者没有出院诊断，不允许出区！', 'warning');
