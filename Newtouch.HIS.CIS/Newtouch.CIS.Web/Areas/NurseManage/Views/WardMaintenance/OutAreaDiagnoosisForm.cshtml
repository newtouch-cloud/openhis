                                $('#tablezd .plusToggleCircle').click();
                                var number = item.px;
                                $("#txt_fzzd" + number).val(item.zdmc);
                                $("#txt_fzzd" + number + "dm").val(item.zddm);
                                $("#txt_cyqk" + number).val(item.cyqk).trigger("change");
                            }
                        }
                      
                    });
            }
        });
