    function GetPatDiagnosis() {
        $.najax({
            type: "GET",
            url: "/NurseManage/WardMaintenance/GetPatDiagnosis?r=" + Math.random(),
            data: { zyh: '@ViewBag.zyh' },
            loadingtext: "数据加载中，请稍后...",
            dataType: "json",
            success: function(zdlist) {
                $.each(zdlist,
                    function (n, item) {
                        if (item.zddl == "TCM") {//中医诊断
                            if (item.zdlx == "1") {
                                $("#txt_zycyzd").val(item.zdmc);
                                $("#txt_zycyzddm").val(item.zddm);
                                $("#txt_zycyqk").val(item.cyqk).trigger("change");
                            }
                            //辅助诊断
                            if (item.zdlx > "1") {
                                $('#tablezyzd .plusToggleCircle').click();
                                var number = item.px;
                                $("#txt_zyfzzd" + number).val(item.zdmc);
                                $("#txt_zyfzzd" + number + "dm").val(item.zddm);
                                $("#txt_zycyqk" + number).val(item.cyqk).trigger("change");
                            }
                        } else {
                            if (item.zdlx == "1") {
                                $("#txt_cyzd").val(item.zdmc);
                                $("#txt_cyzddm").val(item.zddm);
                                $("#txt_cyqk").val(item.cyqk).trigger("change");
                            }
                            //辅助诊断
