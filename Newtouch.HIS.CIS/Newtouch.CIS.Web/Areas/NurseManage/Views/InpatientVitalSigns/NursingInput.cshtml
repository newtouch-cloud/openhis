<script type="text/javascript">
    var localdata = [];
    var errmsg = "";
    var searchsjd = "";
    var patzyh = "";
    $(function () {
            $(window).resize(function () {//浏览器窗口调整大小时重新计算宽高
                $(".dv-body").height($(window).height());
                $(".dv-body").width($(window).width());
