
@{
    Layout = "~/Views/Shared/_Form.cshtml";
}
<style>
    .ul-zbq {
        width: 100%;
        height: 95%;
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .ul-zbq li {
            margin: 25px;
            display: inline;
            float: left;
            height: 100px;
            width: 170px;
            border: 1px solid #ccc;
            border-radius: 5px 5px 0 0;
            -webkit-box-shadow: #666 3px 4px 8px;
            -moz-box-shadow: #666 3px 4px 8px;
            box-shadow: #666 3px 4px 8px;
