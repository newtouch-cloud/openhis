        line-height: 25px;
        padding-left: 10px;
    }

    .footerright {
        width: 20px;
        float: left
    }

    .ui-pg-input {
        display: inline-block;
        height: auto;
        width: auto;
        font-size: .9em;
        margin: 0;
        line-height: inherit;
        padding: 0px 0px;
        height: 20px;
        text-align: center;
        box-shadow: none;
        -webkit-box-shadow: none;
        border: 1px solid #ddd;
