                    top.top.$.Newtouchtab.addTabWithOutMenu({ name: "医嘱管理", enName: "", url: "/DoctorManage/DoctorsAdvice/Index?IsOnlyLook=true&kssj=" + $('#txt_ksrq').val()+"&ycqbr=1", AppId: "CIS" });
                }
            }).trigger('reloadGrid');
