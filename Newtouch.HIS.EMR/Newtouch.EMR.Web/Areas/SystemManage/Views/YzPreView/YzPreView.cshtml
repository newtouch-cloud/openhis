<form method="post" action="#">
    <div>
        <div class="topPanel">
            <div class="toolbar " style="float:right;">
                <div class="btn btn-default">
                    <a authorize="yes" onclick="PrintDoc()"><i class="glyphicon glyphicon-print"></i>打印</a>
                    <script language=javascript>
                        function PrintDoc() {
                            var ctl = document.getElementById("myWriterControl");
                            var flag = document.getElementById("idJumpPrint").checked;
                            ctl.PrintDocument();
                        }
                    </script>
                </div>
                <div class="btn">
                    <input type="checkbox" id="idJumpPrint" name="idJumpPrint" onclick="JumpPrint();" />
                    <label for="idJumpPrint">续打</label>
                    <script language=javascript>
						function JumpPrint() {
							var flag = document.getElementById("idJumpPrint").checked;
							var ctl = document.getElementById("myWriterControl");
							ctl.SetJumpPrintMode(flag);
						}

                    </script>
                </div>
                <div class="btn">
                    <input type="checkbox" id="AreaPrint" name="AreaPrint" onclick="AreaPrints();" />
                    <label for="AreaPrint">区域选择打印</label>
                    <script language=javascript>
                        function AreaPrints() {
							var flag = document.getElementById("AreaPrint").checked;
							var ctl = document.getElementById("myWriterControl");
							ctl.SetBoundsSelectionViewMode(flag);
						}

                    </script>
                </div>
            </div>
        </div>
    </div>

