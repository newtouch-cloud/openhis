                        { label: '检验结果', name: 'jyjg', align: 'left', width: '180px' },
                        { label: '高低标记', name: 'gdbj', align: 'left', width: '100px' },
                        { label: '参考值范围', name: 'ckzfw', align: 'left', width: '120px' },
