				});
                //$mxgridList.dataGrid({
                //    url: "/MedicalRecord/GetPacsSqdhMxGridJson",
                //    //autowidth: false,
                //    postData: { sqdh: $jcGridList.jqGridRowValue().lissqdh },
                //    //width: $(window).width() - 10,
                //    height: 175,
