    $('#btn_jysearch').click(function () {
        var kssj = $('#jy_kssj').val();
        var jssj = $('#jy_jssj').val() + " 23:59:59";
        var ztmc = $('#jy_ztmc').val();
        $("#jyGridList").jqGrid('setGridParam', {
            postData: { mzzyh: mzzyh, type: type, ztmc: ztmc, kssj: kssj, jssj: jssj },
