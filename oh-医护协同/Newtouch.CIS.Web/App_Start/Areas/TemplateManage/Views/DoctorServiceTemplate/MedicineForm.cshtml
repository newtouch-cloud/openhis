                var ids = $("#gridmedicine").getDataIDs();
                if (ids !== typeof (undefined) && ids.length>0) {
                    $.each(ids, function () {
                        var rowid = String(this);
                        //打开编辑模式
                        $("#gridmedicine").jqGrid('editRow', rowid, false, initWMInlineFunc);
                        //给每次剂量单位填充option
