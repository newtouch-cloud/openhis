               <Text>     </Text>
            </Element>
            <Element xsi:type="XString" StyleIndex="2">
               <XElements xsi:nil="true" />
               <Text>日住入常熟美迪柯影像中心</Text>
            </Element>
            <Element xsi:type="XString" StyleIndex="7" WhiteSpaceLength="10">
               <XElements xsi:nil="true" />
               <Text>          </Text>
            </Element>
            <Element xsi:type="XString" StyleIndex="2">
