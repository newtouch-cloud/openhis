			sccj: rowData.ycmc,
            yxq: yxq,
            scrq: scrq,
            kprq: kprq,
            kl: rowData.kl,
            fph: rowData.fph,
            ph: rowData.ph,
            rkdw: rkdw,
            ckdw: "",
            pfjze: pfjze
        };
    }

