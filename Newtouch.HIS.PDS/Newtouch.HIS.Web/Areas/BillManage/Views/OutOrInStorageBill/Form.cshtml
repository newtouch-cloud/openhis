            lsj: isNaN(lsj) ? 0 : lsj.toFixed(4),
            jj: rowData.jj,
            ykpfj: rowData.ykpfj,
            yklsj: rowData.yklsj,
			zje: rowData.Zje,
            sl: rowData.sl,
            Rkbmkc: rowData.kykc,
