    //启用行内编辑框
    function EnableInlineEditBox(jgr) {
        var rowIds = jgr.jqGrid('getDataIDs'); //Grid加载完成开启行内编辑   1.先获取所有行Id  2.遍历调用editRow方法
        for (var i = 0; i < rowIds.length; i++) {
            jgr.jqGrid('editRow',
                rowIds[i],
                true,
                null,
                null,
                null,
                null,
                function (callbackRowId) { //true: when set to true we can use [Enter] key to save the row and [Esc] to cancel editing.
                });
        }
    }

    // 退药
    function newtouch_event_f6() {
        var jqr = null;
        if ($("#dispenseByBatch").is(":checked")) {
            //按批次
            jqr = $dispenseMedicinGridListByBatch;
        } else {
            //不按批次
            jqr = $dispenseMedicinGridListNoBatch;
        }

        if ($("#selzytyapplyno").val() == '' || $("#selzytyapplyno").val() == null) {
            $.modalAlert("请先选择退药申请单号！", "warning");
            return;
        }

        var ids = jqr.jqGrid('getDataIDs'); //获取所有行Id，遍历使编辑框处于保存状态
        if (ids == null || ids.length === 0) {
            $.modalMsg('请查询退药明细', 'warning', 2000);
            return false;
        }
        var tymx = [];
        tyzyh = [];
        for (var i = 0; i < ids.length; i++) {
            jqr.saveRow(ids[i], null, null, null, function (callbackRowId) { }, null, null);
            var rowData = jqr.jqGrid('getRowData', ids[i]);
            if (!rowData) {
                return false;
            }
            if (rowData.tysl.replace(/(^\s*)|(\s*$)/g, "") === "" ||
                rowData.tysl === "" ||
                isNaN(rowData.tysl) ||
                rowData.tysl < 0) {
                $.modalAlert("【" + rowData.ypmc + "】退药数量应为自然数，请确认。", "warning");
                EnableInlineEditBox(jqr); //启用行内编辑框
                return false;
            }
            if (parseInt(rowData.tysl) > parseInt(rowData.sl)) {
                $.modalAlert("【" + rowData.ypmc + "】退药数量不得超过" + rowData.slStr + "。", "warning");
                EnableInlineEditBox(jqr); //启用行内编辑框
                return false;
            }
            if (parseInt(rowData.sl) > 0) {
                tymx.push({
                    "applyNo": rowData.applyNo,
                    "rdbdId": rowData.rdbdId,
                    "yzId": rowData.yzId,
                    "zxId": rowData.zxId,
                    "ph": rowData.ph,
                    "pc": rowData.pc,
                    "ypCode": rowData.ypCode,
                    "ypmc": rowData.ypmc,
                    "sl": rowData.tysl,
                    "zhyz": rowData.zhyz,
                    "zytyapplyno": $("#selzytyapplyno").val()
                });

                if (!tyzyh.find((item) => item.zyh == rowData.zyh)) {
                    tyzyh.push({ "zyh": rowData.zyh });
                }

            }
        }

        $.modalConfirm("确定进行退药吗？", function (flag) {
            if (!flag) return false;
            $.najax({
                type: "POST",
                url: "/HospitalizationPharmacy/ExecuteReturnDrugV2",
                data: { tyParams: tymx },
                alerterror: false,
                success: function (res) {
                    if (res.state === "success") {
                        if ($("#autoPrint").is(":checked")) {
                            //printRpDetail(res.data);
                            printRpDetail($("#selzytyapplyno").val());
                        }
                        else if ($("#autoPrintSum").is(":checked")) {
                            //printRpSummary(res.data);
                            printRpSummary($("#selzytyapplyno").val());
                        }

                        $("#selzytyapplyno").empty();

                        $("#selzytyapplyno").bindSelect({
                            url: "/HospitalizationPharmacy/GetZyTyApplyNo",
                            id: "zytyapplyno",
                            param: {
                                Zyh: "",
                                fybz: $("#sel_fybz").val(),
                                Kssj: $("#Kssj").val(),
                                Jssj: $("#Jssj").val(),
                                ypmc: $("#ypmc").val()
                            },
                            text: "zytyapplyno"
                        });

                        $("#selzytyapplyno").trigger('change');

                        $.modalMsg('退药成功', 'success', 2000);
                        bqGridList(); //绑定病区
                        jqr.trigger("reloadGrid");

                    } else {
                        $.modalAlert(res.message, 'error');
                        EnableInlineEditBox(jqr); //启用行内编辑框
                    }
                }
            });
        }, false);
    }

    //打印明细
    function printRpDetail(rdNo) {
        var zyh = tyzyh[0].zyh;
        var systemCode = "PDS";//报表所属系统编码
        var uri = '@reportUrl' + "?tempCode=64" + "&hospitalCode=" + '@ViewBag.OrganizeId' + "&OrganizeId=" + '@ViewBag.OrganizeId' + "&systemCode=" + systemCode + "&yfbmCode=" + '@ViewBag.yfbmCode' + "&yzIds=" + "&zxIds=" + "&czIds=" + "&zyh=" + tyzyh[0].zyh + "&operateType=2" + "&zyfyapplyno=" + rdNo;
        window.open(uri);
        
    }

    function printRpSummary(rdNo) {
        var systemCode = "PDS";//报表所属系统编码
        var uri = '@reportUrl' + "?tempCode=65" + "&hospitalCode=" + '@ViewBag.OrganizeId' + "&OrganizeId=" + '@ViewBag.OrganizeId' + "&systemCode=" + systemCode + "&yfbmCode=" + '@ViewBag.yfbmCode' + "&yzIds= &zxIds=&operateType=2&kssj=&jssj=" + "&rdNo=" + rdNo + "&czIds=";
        window.open(uri);
    }
</script>