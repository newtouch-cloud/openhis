    // 保存追朔码
    function savePdsPage() {
   
        var rowIds = $gridKCInfoHistory.jqGrid('getDataIDs');//获取所有行Id，遍历使编辑框处于保存状态

        var kcInfoJsonSave = $gridKCInfoHistory.jqGrid('getRowData_AllLine');
        var objArrSave = new Array();
        $.each(kcInfoJsonSave, function () {//保存时将Grid的数据行放在新的数组中
            //追溯码
            var zsm = $("#sel_zsm_" + this.jqRowId).val();
            //是否拆零
            var sfcl = parseInt($("#sel_sfcl_" + this.jqRowId).val(), 10);
            this.zsm = zsm
            this.sfcl = sfcl
            if (zsm != "") {
                objArrSave.push(this);
            }
        });
        var resultObjArr = new Array();
        //与页面加载的数组进行比对，将修改过的数据行放在resultObjArr中，传给后台
        for (var i = 0; i < objArrSave.length; i++) {
                // 验证追溯码数量。 是否拆零选是，只需要扫一个，否的话需要扫对应入库数量的码
                const zsmLength = objArrSave[i].zsm.split(',').filter(entry => entry.trim() !== '').length
            var maxZsmLength = 1
                if (objArrSave[i].sfcl === 1) {
                    maxZsmLength = 1
                } else {
                    maxZsmLength = objArrSave[i].deptSjsl
                }

                if (zsmLength != 0 && zsmLength != maxZsmLength) {
                    $.modalMsg("条目" + objArrSave[i].ypmc + "数量与追溯码数量不一致！", "warning", 1500);
                    return false;
                }

                resultObjArr.push({ pdmxId: objArrSave[i].pdmxId, zsm: objArrSave[i].zsm, sfcl: objArrSave[i].sfcl });
        }
        console.log(resultObjArr)
        if (resultObjArr.length === 0) {
        }
        else {
            $.najax({
               type: "POST",
               url: "/PharmacyDrugStorage/SaveInventoryZsmInfo",
               dataType: "json",
               data: { resultObjArr: JSON.stringify(resultObjArr), pdId: $("#ddlRQ option:selected").attr('data-pdId') },
               success: function (ajaxresp) {
                   //$("#btn_search").trigger("click");
                   $.modalAlert("保存成功", 'success');
               },
               error: function (ajaxresp) {
                   $.modalAlert(ajaxresp.message, Error);
               }
            });
        }
    };

</script>