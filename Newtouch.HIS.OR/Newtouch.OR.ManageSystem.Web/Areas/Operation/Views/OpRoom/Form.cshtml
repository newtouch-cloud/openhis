
@{
    ViewBag.Title = "手术详细信息";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<form id="form1">
    <div style="padding-top: 20px; margin-right: 30px;">
        <table class="form">
            <tr>
                <th class="formTitle">房间代码：</th>
                <td class="formValue">
                    <input id="Code" name="Code" type="text" class="form-control" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">房间名称：</th>
                <td class="formValue">
                    <input id="Name" name="Name" type="text" class="form-control" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">位置：</th>
                <td class="formValue">
                    <input id="Addr" name="Addr" type="text" class="form-control" />
                </td>
            </tr>
        </table>
    </div>
</form>

<script>
    var keyValue = $.request("keyValue");
    $(function () {
        if (!!keyValue) {
            $.ajax({
                url: "/Operation/OpRoom/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                success: function (data) {
                    $("#form1").formSerialize(data);
                    getZjm();
                }
            });
        }
    });

    function AcceptClick(callBack) {
        if (!$('#form1').formValid()) {
            return false;
        }
        var postData = $("#form1").formSerialize();

        $.submitForm({
            url: "/Operation/OpRoom/SubmitForm?keyValue=" + keyValue,
            param: postData,
            success: function () {
                callBack();
                $.modalClose();
            }
        });
    }
</script>
