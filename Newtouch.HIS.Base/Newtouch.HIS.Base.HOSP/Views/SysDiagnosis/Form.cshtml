<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.najax({
                url: "/SysDiagnosis/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                }
            });
        }
    });

    function initControl() {
        //组织机构下拉框
        $("#OrganizeId").bindSelect({
            url: "/Organize/GetChildTreeSelectJson",
            selectedValue: $.request('orgId'),
        });

        //首拼
        $('#zdmc').keyup(function () {
            $('#py').val($(this).toShouPin());
        })

        //诊断类型
        $("#zdlx").bindSelect({
            url: "/ItemsData/GetSelectJson",
            param: { code: "DiagnosisType" }
        });
    }

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
		}
		debugger
        var postData = $("#form1").formSerialize();
        $.submitForm({
            url: "/SysDiagnosis/SubmitForm?keyValue=" + keyValue,
            param: postData,
            success: function () {
                $.currentWindow().$("#gridList").resetSelection();
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>