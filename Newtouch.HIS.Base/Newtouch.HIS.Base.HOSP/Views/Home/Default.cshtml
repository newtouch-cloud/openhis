        function GetSalaryChart() {
            //var randomScalingFactor = function () { return Math.round(Math.random() * 100) };
            var OutpatientList =[];
            var InpatientList = [];
            //折线图 获取就诊人数
            $.ajax({
                url: "/Home/GetVisitNum?r=" + Math.random(),
                dataType: "json",
