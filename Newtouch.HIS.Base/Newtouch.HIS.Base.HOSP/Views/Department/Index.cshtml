
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";

    var opr = Newtouch.Common.Operator.OperatorProvider.GetCurrent();
}

<div class="topPanel">
    @Html.Partial("_OrganizeIdDDLToolbarSearchView")
    <div class="toolbar">
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary" onclick="btn_add()"><i class="fa fa-plus"></i>新建</a>
        </div>
        <div class="btn-group">
            <a id="NF-edit" authorize="yes" class="btn btn-primary" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a>
        </div>
        <div class="btn-group">
            <a id="NF-Wards" class="btn btn-primary" onclick="btn_wards()"><i class="fa fa-pencil-square-o"></i>病区信息</a>
        </div>
        <div class="btn-group">
            <a id="YBKS-upload" class="btn btn-primary" onclick="btn_ybks_upload()"><i class="fa"></i>医保科室上传</a>
        </div>
        <div class="btn-group">
            <a id="YBKS-update" class="btn btn-primary" onclick="btn_ybks_update()"><i class="fa fa-pencil-square-o"></i>医保科室更新</a>
        </div>
        <div class="btn-group">
            <a id="YBKS-revoke" class="btn btn-primary" onclick="btn_ybks_revoke()"><i class="fa fa-trash-o"></i>医保科室撤销</a>
        </div>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="名称/编码" style="width: 180px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList" style="width:100%;"></table>
</div>

<script>
    $(function () {
        initControl();
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            treeGrid: true,
            treeGridModel: "adjacency",
            ExpandColumn: "Code",
            url: "/Department/GetTreeGridJson",
            height: $(window).height() - 96,
            postData: { keyword: $("#txt_keyword").val(), organizeId: $("#OrganizeId").val() },
            colModel: [
				{ label: "主键", name: "Id", hidden: true, key: true },
				{ label: "国家科室名称", width: 80, name: "gjksmc" },
                { label: "国家科室编码", width: 80, name: "ybksbm" },
                { label: '上传医保', name: 'UploadYB', width: 60, align: 'left' },
                { label: '名称', name: 'Name', width: 100, align: 'left' },
                { label: '编码', name: 'Code', width: 60, align: 'left' },
                { label: '机构名称', name: 'OrganizeName', width: 200, align: 'left' },
                {
                    label: "门诊住院标志", name: "mzzybz", width: 60, align: "left",
                    formatter: function (cellvalue) {
                        if (cellvalue == "0") {
                            return "通用"
                        } else if (cellvalue == "1") {
                            return "门诊"
                        } else {
                            return "住院"
                        }
                    }
                },
                { label: "有效", name: "zt", width: 60, align: "left", formatter: function (cellvalue) { return cellvalue == "1" ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>"; } },
                { label: '创建人', name: 'CreatorCode', width: 100, align: 'left' },
                { label: '创建时间', name: 'CreateTime', width: 100, align: 'left', formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' } },
                { label: '最后修改', name: 'LastModifierCode', width: 100, align: 'left' },
                { label: '最后修改时间', name: 'LastModifyTime', width: 100, align: 'left', formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' } },
                { label: '排序', name: 'px', width: 40, align: 'left' }
            ]
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val(), organizeId: $("#OrganizeId").val() },
            }).trigger('reloadGrid');
        });
    }

    //回车事件
    $('#txt_keyword').keydownEnterEvent(function () {
        $('#btn_search').trigger('click');
    })

    function initControl() {

    }

    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增科室",
            url: "/Department/Form?orgId=" + $('#OrganizeId').val(),
            width: "700px",
            height: "600px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_edit() {
        var seleRowid = jQuery("#gridList").jqGrid("getGridParam", "selrow");
        if (!(seleRowid)) {
            $.modalAlert("请选中一条信息", 'warning');
            return;
        }
        var keyValue = $("#gridList").jqGridRowValue().Id;
        $.modalOpen({
            id: "Form",
            title: "修改科室",
            url: "/Department/Form?keyValue=" + keyValue,
			width: "700px",
			height: "600px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_wards() {
        var seleRowid = jQuery("#gridList").jqGrid("getGridParam", "selrow");
        if (!(seleRowid)) {
            $.modalAlert("请选中一条信息", 'warning');
            return;
        }
        var keyValue = $("#gridList").jqGridRowValue().Id;
        $.modalOpen({
            id: "Form",
            title: "病区信息",
            url: "/Department/WardInfo?keyValue=" + keyValue,
            width: "750px",
            height: "700px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_ybks_upload() {
        var seleRowid = jQuery("#gridList").jqGrid("getGridParam", "selrow");
        if (!(seleRowid)) {
            $.modalAlert("请选中一条信息", 'warning');
            return;
        }
        var codeValue = jQuery("#gridList").jqGrid('getCell', seleRowid, 'Code');
        var uploadYBValue = jQuery("#gridList").jqGrid('getCell', seleRowid, 'UploadYB');
        if (uploadYBValue == "1") {
            $.modalAlert("该科室已经上传医保", 'warning');
            return;
        }
        var ybresp = { hisId: "0", operatorId: "@opr.rygh", operatorName: "@opr.UserName", orgId: "@opr.OrganizeId", ksCode: codeValue };
        $.ajax({
            type: "POST",
            url: "http://127.0.0.1:33333/api/YiBao/DepartmentInfoUpload_3401",
            data: ybresp,
            dataType: "json",
            async: false,
            success: function (data) {
                var upDataReturn = eval('(' + data + ')');
                if (upDataReturn.infcode == "0") {
                    $.modalAlert("医保科室上传成功", 'success');
                    gridList();
                    $('#btn_search').trigger('click');
                }
                else {
                    $.loading(false);
                    isuccer = false;
                    $.modalAlert("医保科室上传失败：" + upDataReturn.err_msg, 'error');
                    return;
                }

            }
        });
    }

    function btn_ybks_update() {
        var seleRowid = jQuery("#gridList").jqGrid("getGridParam", "selrow");
        if (!(seleRowid)) {
            $.modalAlert("请选中一条信息", 'warning');
            return;
        }
        var codeValue = jQuery("#gridList").jqGrid('getCell', seleRowid, 'Code');
        var uploadYBValue = jQuery("#gridList").jqGrid('getCell', seleRowid, 'UploadYB');
        if (uploadYBValue == "0") {
            $.modalAlert("该科室尚未上传医保", 'warning');
            return;
        }
        var ybresp = { hisId: "0", operatorId: "@opr.rygh", operatorName: "@opr.UserName", orgId: "@opr.OrganizeId", ksCode: codeValue };
        $.ajax({
            type: "POST",
            url: "http://127.0.0.1:33333/api/YiBao/DepartmentInfoUpdate_3402",
            data: ybresp,
            dataType: "json",
            async: false,
            success: function (data) {
                var upDataReturn = eval('(' + data + ')');
                if (upDataReturn.infcode == "0") {
                    $.modalAlert("医保科室更新成功", 'success');
                    gridList();
                    $('#btn_search').trigger('click');
                }
                else {
                    $.loading(false);
                    isuccer = false;
                    $.modalAlert("医保科室更新失败：" + upDataReturn.err_msg, 'error');
                    return;
                }
            }
        });
    }

    function btn_ybks_revoke() {
        var seleRowid = jQuery("#gridList").jqGrid("getGridParam", "selrow");
        if (!(seleRowid)) {
            $.modalAlert("请选中一条信息", 'warning');
            return;
        }
        var codeValue = jQuery("#gridList").jqGrid('getCell', seleRowid, 'Code');
        var uploadYBValue = jQuery("#gridList").jqGrid('getCell', seleRowid, 'UploadYB');
        if (uploadYBValue == "0") {
            $.modalAlert("该科室尚未上传医保", 'warning');
            return;
        }
        var ybresp = { hisId: "0", operatorId: "@opr.rygh", operatorName: "@opr.UserName", orgId: "@opr.OrganizeId", ksCode: codeValue };
        $.ajax({
            type: "POST",
            url: "http://127.0.0.1:33333/api/YiBao/DepartmentInfoRevoke_3403",
            data: ybresp,
            dataType: "json",
            async: false,
            success: function (data) {
                var upDataReturn = eval('(' + data + ')');
                if (upDataReturn.infcode == "0") {
                    $.modalAlert("医保科室撤销成功", 'success');
                    gridList();
                    $('#btn_search').trigger('click');
                }
                else {
                    $.loading(false);
                    isuccer = false;
                    $.modalAlert("医保科室撤销失败：" + upDataReturn.err_msg, 'error');
                    return;
                }
            }
        });
    }
</script>