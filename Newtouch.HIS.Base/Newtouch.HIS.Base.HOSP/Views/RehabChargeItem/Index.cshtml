
@{
    ViewBag.Title = "康复项目基本信息管理";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<div class="topPanel">
    @Html.Partial("_OrganizeIdDDLToolbarSearchView")
    <div class="toolbar">
        <div class="btn-group">
            <a id="NF-add" class="btn btn-primary" onclick="btn_add()"><i class="fa fa-plus"></i>新建</a>
        </div>
        <div class="btn-group">
            <a id="NF-edit" class="btn btn-primary" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a>
        </div>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="名称/编码/首拼" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

<script>
    $(function () {
        initControl();
        gridList();
    });

    function initControl() {

    }

    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/RehabChargeItem/GetRehabChargeItemList",
            postData: getSearchPostData(),
            height: 400,
            colModel: [
            { label: "sfxmId", name: "sfxmId", width: 100, align: "left", hidden: true },
            { label: "名称", name: "Name", width: 120, align: "left" },
            { label: "编码", name: "Code", width: 100, align: "left" },
            { label: "分类", name: "sfflName", width: 120, align: "left" },
            { label: "首拼", name: "py", width: 100, align: "left" },
            {
                label: "计费方式", name: "CollectionMethod", width: 120, align: "left",
                formatter: function (val) {
                    if (val == 1) {
                        return "服务次数";
                    };
                    if (val == 0) {
                        return "时长";
                    }
                }
            },
            { label: "有效", name: "zt", width: 100, align: "center", formatter: function (cellvalue) { return cellvalue == "1" ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>"; } },
            { label: '创建时间', name: 'CreateTime', width: 150, align: 'left', formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' } },
            { label: '最后修改时间', name: 'LastModifyTime', width: 150, align: 'left', formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' } },
            { label: '排序', name: 'px', width: 100, align: 'left' }
            ]
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: getSearchPostData(), url: "/RehabChargeItem/GetRehabChargeItemList"
            }).trigger('reloadGrid');
        })
        $("#btn_search").trigger('click');
    }
    //查询条件
    function getSearchPostData() {
        var keyword = $("#txt_keyword").val();
        var OrganizeId = $("#OrganizeId").val();
        return { keyword: keyword, OrganizeId: OrganizeId };
    };

    //回车事件
    $('#txt_keyword').keydownEnterEvent(function () {
        $('#btn_search').trigger('click');
    })

    function btn_add() {
        $.modalOpen({
            id: "FormFIEdit",
            title: "康复项目维护",
            url: "/RehabChargeItem/Form",
            width: "500px",
            height: "470px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    //修改
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().sfxmId;
        var OrganizeId = $("#OrganizeId").val();
        if (!!!keyValue) {
            $.modalAlert("请选中一条信息", 'warning');
            return;
        }
        $.modalOpen({
            id: "FormFIEdit",
            title: "修改信息",
            url: "/RehabChargeItem/Form?sfxmId=" + keyValue + "&OrganizeId=" + OrganizeId,
            width: "500px",
            height: "470px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

</script>
