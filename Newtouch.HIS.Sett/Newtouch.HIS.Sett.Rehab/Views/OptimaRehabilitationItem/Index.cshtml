@{
    ViewBag.Title = "Optima康复项目基本信息管理";

    Layout = "~/Views/Shared/_Index.cshtml";
}

<div class="topPanel" id="topSearch">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group" onclick="AddOptimaRehabilitationItem()">
            <a id="NF-add" class="btn btn-primary dropdown-text"><i class="fa fa-plus"></i>新建项目</a>
        </div>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
<script type="text/javascript" src="~/Content/js/RehabiliationItemManage/OptimaItemManage.js"></script>