    //上传
    $('#btn_upload').click(function () {
        var seleRow = check();
        // 获取上传需要的数据
        var orgId = '@(opr.OrganizeId)';
        var operatorId = '@(opr.rygh)';
        var operatorName = '@(opr.UserName)';
        var crkId = seleRow.length > 1 ? "" : seleRow[0].mlbm_id;
        if ($("#scqk").val() === '0') {
            $.modalAlert("请勿选择已上传数据", 'warn');
            return;
        }
        if (!!!seleRow) {
            return;
        }
        if (seleRow.length > 1) {
            // 弹出确认框，确认上传
            $.modalConfirm("选择多条数据将全部上传!", function(f) {
                if (f){
                    uploadData(orgId, operatorId, operatorName, crkId);
                }
            });
        } else {
            // 选择一条数据，直接上传
            uploadData(orgId, operatorId, operatorName, crkId);
        }
        function uploadData(orgId, operatorId, operatorName, crkId) {
            var tradiNumber = $("#trad").val();
            var data;
            var upUrl;
            // 根据tradiNumber来选择不同的接口
            switch (tradiNumber) {
                case 'JG10001':
                    upUrl = "http://127.0.0.1:33333/api/YiBao/RegulatoryDataUpload_JG10001";
                    data = {
                        "orgId": orgId,
                        "operatorId": operatorId,
                        "operatorName": operatorName,
                        "crkId": crkId
                    };
                    break;
                case 'JG10004':
                    upUrl = "http://127.0.0.1:33333/api/YiBao/RegulatoryDataUpload_JG10004";
                    data = {
                        "orgId": orgId,
                        "operatorId": operatorId,
                        "operatorName": operatorName,
                        "crkId": crkId
                    };
                    break;
                case 'JG10010':
                    upUrl = "http://127.0.0.1:33333/api/YiBao/RegulatoryDataUpload_JG10010";
                    data = {
                        "orgId": orgId,
                        "operatorId": operatorId,
                        "operatorName": operatorName,
                        "crkId": crkId
                    };
                    break;
                case 'JG10012':
                    upUrl = "http://127.0.0.1:33333/api/YiBao/RegulatoryDataUpload_JG10012";
                    data = {
                        "orgId": orgId,
                        "operatorId": operatorId,
                        "operatorName": operatorName,
                        "crkId": crkId
                    };
                    break;
                case 'JG10013':
                    upUrl = "http://127.0.0.1:33333/api/YiBao/RegulatoryDataUpload_JG10013";
                    data = {
                        "orgId": orgId,
                        "operatorId": operatorId,
                        "operatorName": operatorName,
                        "medins_setl_id": crkId
                    };
                    break;
                case 'JG40001':
                    upUrl = "http://127.0.0.1:33333/api/YiBao/RegulatoryDataUpload_JG40001";
                    data = {
                        "orgId": orgId,
                        "operatorId": operatorId,
                        "operatorName": operatorName,
                    };
                    break;
                case 'JG40003':
                    upUrl = "http://127.0.0.1:33333/api/YiBao/RegulatoryDataUpload_JG40003";
                    data = {
                        "orgId": orgId,
                        "operatorId": operatorId,
                        "operatorName": operatorName
                    };
                    break;
                default:
                    $.modalAlert("无效的上传类型", 'error');
                    return;
            }

            // 发起上传请求
            $.najax({
                url: upUrl,
                dataType: "json",
                data: data,
                type: "POST",
                success: function(response) {
                    $.modalAlert("上传成功", 'success');
                    $.modalClose();
                },
                error: function(error) {
                    $.modalAlert("上传失败，请重试", 'error');
                }
            });
        }

    });

