                $('#zfje1').val(xjzfys.toFixed(2));
            }
            $('#hjssk').html(xjzfys.toFixed(2));
            $('#zhaoling').html('0.00');
        }

        if (withYjj == 'True') {
            $.najax({
                url: "/PatientManage/AccountManage/GetZhyeByPatid?patid=" + $.request("patid"),
