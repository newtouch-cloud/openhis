                        sele = true;
                    }
                    if (sele && !!yjjye && yjjye < xjzfys.toFixed(2)) {
                        $('#zffs1').append('<option value="' + value.xjzffs + '" >' + value.xjzffsmc + '</option>');
                    }
                    else if (sele) {
                        $('#zffs1').append('<option value="' + value.xjzffs + '" selected=true>' + value.xjzffsmc + '</option>');
