		        ybjyFeeReturn.calc_xjzf = calc_xjzf;
		        //
		        zje = ovpraseFloat(ybjyFeeReturn.his_hisfyze);
		        orglxjzfys = ovpraseFloat(ybjyFeeReturn.calc_xjzf);
		        xjzfys = orglxjzfys;    //有折扣时会不等

		        mzjzje = ovpraseFloat(ybjyFeeReturn.maf_pay);
