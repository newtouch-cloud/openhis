            if (!medicalInsurance) {
                $.modalAlert("程序未动态配置医保地，请配置后重试", 'warning');
                $.modalClose();
            }

	        if (medicalInsurance == "chongqing") {
	        	$('#divGuiAnYbFee').remove();
		        $('#divCQYbFee').show();
                $('#divGuiAnXnhFee').remove();
                $('#divzhdy').show();
                var mzjzje = 0.000;//民政救助金额
