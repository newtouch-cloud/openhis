@using NewtouchHIS.Lib.Base.Utilities;
@using NewtouchHIS.Lib.Base;
@{
    var domain = AppSettings.GetConfig("AccessConfig:Document_Domain");
    if (!string.IsNullOrWhiteSpace(domain))
    {
        if (Context.Request.Host.Value?.ToLower().IndexOf(domain.ToLower()) < 0)
        {
            domain = null;
        }
    }
}
@if (!string.IsNullOrWhiteSpace(domain))
{
    <script type="text/javascript">
        document.domain = '@(domain)';
    </script>
}
<script type="text/javascript" src="@MvcHelper.GetStaticResourceScriptUrl("~/js/jquery/jquery.choose.js")"></script>